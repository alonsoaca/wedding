  <div class="pages_title">
    <h2>Repondez s'il vous plait <span>RSVP</span></h2>
  </div>
   
   <div class="content">
        <div class="left23">
    
            <div class="form_content">
            
                <%= render 'layouts/flash_messages' %>

                <%= form_for @guest do |f|%>

                  <%= render 'shared/error_messages', object: f.object %>

                  <h3 class="form_subtitle">¿Asistirias al a boda?</h3>
                    <div class="form_rsvp">
                        <div class="form_row_rsvp">
                        <div class="checkbox_container"><%= f.radio_button :attend_status, "yes", { :class => "form_radio"}%></div> <span class="checkbox_value">Si voy.</span>  
                        </div>
                        <div class="form_row_rsvp">
                        <div class="checkbox_container"><%= f.radio_button :attend_status, "no", { :class => "form_radio"}%></div> <span class="checkbox_value">No voy.</span>  
                        </div>
                        <div class="form_row_rsvp">
                        <div class="checkbox_container"><%= f.radio_button :attend_status, "talves", { :class => "form_radio"}%></div> <span class="checkbox_value">No  estoy seguro.</span>  
                        </div>
                    </div>

                  <h3 class="form_subtitle">Detalles del invitado</h3>
                    <div class="form">
                        <div class="form_row">
                        <%= f.label :name, "tu nombre:" %><br />
                        <%= f.text_field :name, {:class => 'form_input'}%>
                        </div>
                        <div class="form_row">
                        <%= f.label :email, "tu email:" %><br />
                        <%= f.text_field :email, {:class => 'form_input'}%>
                        </div>
                        <div class="form_row">
                        <%= f.label :telephone, "tu teléfono:" %><br />
                        <%= f.text_field :telephone, {:class => 'form_input'}%>
                        </div>
                        <div class="form_row">
                            <%= f.submit("Agregar RSVP", :class => 'form_submit_contact') %>
                        </div> 
                    </div>

                <% end %>
            </div>
        </div>

        <div class="clear"></div>
    </div>

   <div class="clear"></div> 